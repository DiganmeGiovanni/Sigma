<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/iv_icon_category"
        android:contentDescription="@string/transaction"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        tools:src="@drawable/ic_category_market_2x"/>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_icon_category"
        android:layout_toStartOf="@+id/tv_quantity"
        android:textSize="18sp"
        tools:text="Cuenta citibanamex"/>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_account"
        android:layout_toEndOf="@id/iv_icon_category"
        android:layout_toStartOf="@+id/tv_quantity"
        android:textColor="@color/textColorLightSecondary"
        android:textSize="@dimen/text_subheading"
        tools:text="Viveres y despensa"/>

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_title"
        tools:text="$1,500.67"/>

    <View
        android:background="@color/dividerColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_category"/>
</RelativeLayout>