<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/ll_left_drawer"
        android:background="@color/gray_foreground"
        android:clickable="true"
        android:layout_gravity="start"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:background="@color/colorAccent"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:orientation="vertical"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_user_profile_image"
                android:layout_gravity="center_horizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/default_profile"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_medium"
                android:textSize="@dimen/text_title"
                tools:text="Giovanni Aguirre"/>
            <TextView
                android:id="@+id/tv_user_email"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_medium"
                android:textSize="@dimen/text_subheading"
                tools:text="giovanni.fi05@gmail.com"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_transactions"
            android:drawableStart="@drawable/ic_money_1x"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:text="@string/resume_pane"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_subheading"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_transactions_per_account"
            android:drawableStart="@drawable/ic_accounts_1x"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/transactions"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_subheading"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_accounts"
            android:drawableStart="@drawable/ic_accounts_1x"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/accounts"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_subheading"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_charts"
            android:drawableStart="@drawable/ic_chart_1x"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/stats"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_subheading"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_scheduled_transactions"
            android:drawableStart="@drawable/ic_schedule_1x"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/scheduled_transactions"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_subheading"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_preferences"
            android:drawableStart="@drawable/ic_settings_1x"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/preferences"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_subheading"
            android:textStyle="bold"/>
    </LinearLayout>
</layout>