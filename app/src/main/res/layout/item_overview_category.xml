<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp">
        <ImageView
            android:id="@+id/iv_icon"
            android:contentDescription="@string/app_name"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            tools:src="@drawable/ic_accounts_1x"/>

        <TextView
            android:id="@+id/tv_category_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_icon"
            android:layout_toStartOf="@+id/tv_percent"
            android:layout_marginStart="16dp"
            android:textSize="@dimen/text_subheading"
            tools:text="@string/category_description_clother_shoes"/>
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_category_description"
            android:layout_toEndOf="@+id/iv_icon"
            android:layout_toStartOf="@+id/tv_percent"
            android:layout_marginStart="16dp"
            tools:text="$500.00"/>

        <TextView
            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/green"
            android:textSize="@dimen/text_title"
            tools:text="37%"/>
    </RelativeLayout>
</layout>